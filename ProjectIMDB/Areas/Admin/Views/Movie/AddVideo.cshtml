
@{
    ViewData["Title"] = "AddVideo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@model VideoVM


<link rel="stylesheet" type="text/css" href="/Adminsite/assets/libs/select2/dist/css/select2.min.css">
<link rel="stylesheet" type="text/css" href="/Adminsite/assets/libs/jquery-minicolors/jquery.minicolors.css">
<link href="/Adminsite/dist/css/style.min.css" rel="stylesheet">



<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Movie Add</h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Movie</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Add</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <form action="/Admin/Movie/AddVideo" method="post" class="form-horizontal" enctype="multipart/form-data">
                    <div class="card-body">
                        <h4 class="card-title">Movie Info</h4>
                        <div class="form-group row">
                            @Html.LabelFor(q => q.movieid, new { @class = "col-sm-3 text-right control-label col-form-label" })
                            <div class="col-sm-9">

                                <select name="movieid" class="form-control" id="country">
                                    @if (Model.movieid != 0)
                                    {
                                        <option selected value="@Model.movieid">@Model.name</option>
                                    }
                                    else
                                    {
                                        <option value="" hidden disabled selected>Please select movie name</option>

                                        @foreach (var item in Model.movies)

                                        {

                                            <option value="@item.ID">@item.Name</option>

                                        }

                                    }
                                    @Html.ValidationMessageFor(q => q.movieid, "", new { @class = "text-danger" })

                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(q => q.videopath, new { @class = "col-sm-3 text-right control-label col-form-label" })

                            <div class="col-sm-9">
                                @Html.TextBoxFor(q => q.videopath, new { @placeholder = "Enter video path", @class = "form-control", @id = "lname" })
                                @Html.ValidationMessageFor(q => q.videopath, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="border-top">
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    



    <script src="/Adminsite/assets/libs/select2/dist/js/select2.full.min.js"></script>
    <script src="/Adminsite/assets/libs/select2/dist/js/select2.min.js"></script>
    <script src="/Adminsite/assets/libs/jquery-asColor/dist/jquery-asColor.min.js"></script>

    <script>
        $(".select2").select2();

    </script>
}
