
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Site/Views/Shared/_SiteLayout.cshtml";
}

@model ProjectIMDB.Models.VM.SiteHomeVM

<style>
    @@media screen and (min-width:680px) {

        .poster {
            height: 410px;
