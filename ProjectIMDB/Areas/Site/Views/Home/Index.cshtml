<div class="slider movie-items">
    <div class="container">
        <div class="row">
            <div class="social-link">
                <p>Follow us: </p>
                <a href="#"><i class="ion-social-facebook"></i></a>
                <a href="#"><i class="ion-social-twitter"></i></a>
                <a href="#"><i class="ion-social-googleplus"></i></a>
                <a href="#"><i class="ion-social-youtube"></i></a>
            </div>
            <div class="slick-multiItemSlider">
                @foreach (var item in Model.BannerMovies)
                {

                    <div class="movie-item">
                        <div class="mv-img">
                           
                            <img class="poster" src="/adminsite/movieposter/@item.PosterURL" alt="">
                        </div>
                        <div class="title-in">
                            @foreach (var data in item.MovieGenres.Where(q => q.IsDeleted == false))
                            {
                                <div class="cate">
                                    <span class="orange"><a href="#">@data.Genre.Name</a></span>
                                </div>
                            }

                            <h6><a href="/Site/MoviePage/Detail/@item.ID">@item.Name</a></h6>
                            <p><i class="ion-android-star"></i><span>7.4</span> /10</p>
                        </div>
                    </div>
                }

